# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  
  config.vm.box = "bento/ubuntu-20.10"
  # config.vm.box_version = "2.3.7"
  config.vm.network "forwarded_port", guest: 80, host: 1234

  # Time and date
  require 'time'
  offset = ((Time.zone_offset(Time.now.zone) / 60) / 60)
  timezone_suffix = offset >= 0 ? "+#{offset.to_s}" : "#{offset.to_s}"
  timezone = 'Etc/GMT' + timezone_suffix
  config.vm.provision :shell, :inline => "sudo rm /etc/localtime && sudo ln -s /usr/share/zoneinfo/" + timezone + " /etc/localtime", run: "always"

  # Make sure the VM cache is clean is up to date before we install anything
  config.vm.provision :shell, :inline => "sudo apt-get clean", run: "always"
  config.vm.provision :shell, :inline => "sudo apt-get update", run: "always"
  config.vm.provision :shell, :inline => "yes | sudo apt-get upgrade", run: "always"
  
  # No need to sync the vagrant folder, everything gets deployed
  # with the ansible playbook -- VM seflcontained
  config.vm.synced_folder 'synced_folder', "/var/mangal/apps/", create: true
  
  config.vm.provision :ansible do |ansible|
    ansible.ask_vault_pass = true
    ansible.playbook = "playbook.yml"
  end
end
